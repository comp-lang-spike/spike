#!/usr/bin/env spike

class Foo : Object {
    foo() {
        puts("Hello from foo!");
    }
    bar() {
        puts("Hello from bar!");
    }
    tomato() {
        puts("Hello from tomato!");
    }
    goodbye() {
        puts("Goodbye from Foo!");
    }
}

class Bar : Foo {
    bar(sym) {
        puts("Hello from Bar.bar!");
        (self.*sym)();
        (super.*sym)();
    }
    tomato() {
        puts("Hello from Bar.tomato!");
    }
    whatever() {
        puts("Whatever.");
    }
}

math(oper) {
    obj a, b;
    
    a = 40;
    b = 2;
    printf("math: %d\n", (a.*oper)(b));
}

main(args) {
    obj sym, o;
    
    sym = $foo;
    printf("%s\n", sym.printString);
    
    o = Bar.new();
    (o.*sym)();
    sym = $bar;
    (o.*sym)($tomato);
    (o.*(doWhatever()))();
    (o.*$goodbye)();
    
    if (false) {
        // XXX: Currently, the dot-star operator doesn't work with
        // operators... or keyword methods.
        math($__add__);
        math($__mul__);
    }
    
    return 0;
}

doWhatever() {
    return $whatever;
}
